<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <title>Lista de Usuários</title>
</head>
<body>
  <h1>Usuários Cadastrados</h1>
  <a href="/usuario/novo">Criar Novo Usuário</a>
  <table border="1" cellpadding="8" cellspacing="0">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% usuarios.forEach(u => { %>
        <tr>
          <td><%= u.id %></td>
          <td><a href="/usuario/<%= u.id %>"><%= u.nome %></a></td>
          <td><%= u.email %></td>
          <td>
            <a href="/usuario/editar/<%= u.id %>">Editar</a>
            <form action="/usuario/excluir/<%= u.id %>" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Confirma exclusão?')">Excluir</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>